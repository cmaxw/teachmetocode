= form_for @episode, :url => show_episodes_path(@show) do |f|
  -if @episode.errors.any?
    #error_explanation
      %h2= "#{pluralize(@episode.errors.count, "error")} prohibited this episode from being saved:"
      %ul
        - @episode.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :copy
    = f.text_area :copy
  .actions
    = f.submit 'Save'
